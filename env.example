# Configuraci√≥n del servidor
NODE_ENV=development
PORT=8080

# Google Cloud Platform
GOOGLE_CLOUD_PROJECT_ID=tu-proyecto-id
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account-key.json

# Google Sheets
GOOGLE_SHEETS_ID=tu-sheets-id
GOOGLE_API_KEY=tu-api-key

# Google OAuth
GOOGLE_CLIENT_ID=tu-client-id
GOOGLE_CLIENT_SECRET=tu-client-secret
GOOGLE_CLIENT_EMAIL=tu-service-account-email
GOOGLE_PRIVATE_KEY=tu-private-key

# JWT
JWT_SECRET=tu-jwt-secret-super-seguro
JWT_EXPIRES_IN=7d

# Google AI
GOOGLE_AI_API_KEY=tu-api-key-de-gemini
AI_MODEL_NAME=gemini-pro
AI_LOCATION=us-central1

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://tu-dominio.com

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (Firestore)
FIRESTORE_COLLECTION_PREFIX=somos_

# Storage (Google Cloud Storage)
STORAGE_BUCKET_NAME=tu-bucket-name

# Monitoring
ENABLE_METRICS=true
ENABLE_LOGGING=true 